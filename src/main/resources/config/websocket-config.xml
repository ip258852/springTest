<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:websocket="http://www.springframework.org/schema/websocket"
       xsi:schemaLocation="
		http://www.springframework.org/schema/websocket http://www.springframework.org/schema/websocket/spring-websocket.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		">

    <!-- url:/appç‚º-->
    <websocket:message-broker application-destination-prefix="/app" user-destination-prefix="/user">
        <websocket:stomp-endpoint path="/endpoint" allowed-origins="*" >
            <websocket:handshake-handler ref="testHandler" />
            <websocket:handshake-interceptors >
                <bean class="org.test.interceptor.TestInterceptor"/>
            </websocket:handshake-interceptors>

            <websocket:sockjs/>
        </websocket:stomp-endpoint>
        <websocket:simple-broker  prefix="/topic"/>
    </websocket:message-broker>
    
    <websocket:handlers>
        <websocket:mapping path="/hi" handler="txt"/>
    </websocket:handlers>

    <bean id="testHandler" class="org.test.handler.TestHandler">
    </bean>
    <bean id="txt" class="org.test.handler.TxtHandler"/>
</beans>